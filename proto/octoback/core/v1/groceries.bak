syntax = "proto3";

package octoback.core.v1;

import "validate/validate.proto";

// GroceryList represents a list of grocery items.
message GroceryList {
    string id = 1 [(validate.rules).string.pattern = "^gl_[[:alnum:]]{8}$"];
    string name = 2;
    repeated GroceryItem items = 3;
}

// GroceryItem represents a single grocery item.
message GroceryItem {
    string id = 1 [(validate.rules).string.pattern = "^gi_[[:alnum:]]{8}$"];
    string name = 2 [(validate.rules).string = { min_len: 1, max_len: 100 }];
    int32 quantity = 3;
    bool checked = 4;
}
